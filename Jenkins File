pipeline {  
    agent any  
    stages {  
            stage ('Git-Checkout') {  
                steps{
                    git url: 'https://github.com/Sandhyanil/Project1.git'
                    echo "Checkout successful";
                } 
            }
            stage ('Compile') {  
                  steps{
                    bat label: '', script: 'mvnw compile'
                    echo "test successful"; 
                    
                } 
            }
            stage ('Build') {  
                  steps{
                    bat label: '', script: 'mvnw clean'
                    bat label: '', script: 'mvnw package'
                    echo "build successful";
                    
                } 
            }
             stage ('Test') {  
                  steps{
                    bat label: '', script: 'mvnw test'
                    echo "test successful";
                    
                } 
            }
           stage ('artifacts') {  
                  steps{
                    archive 'target/*.war'
                 }
             }
             stage ('deploy') {  
                  steps{
                    bat '''copy C:\ProgramData\Jenkins\.jenkins\workspace\My First pipelie project\target\*.war C:\Program Files\Apache Software Foundation\Tomcat 10.0\webapps'''
                  }
              }
         }
    }
}
